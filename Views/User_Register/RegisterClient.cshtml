                <script>

                    $(document).ready(function () {

                        $('#checking').hide();
                        $('#sumbit').hide();
                        $('#UserName').focusout(function () {

                            var userName = $('#UserName').val();

                            //alert('User Name ='+ userName);
                            $('#checking').show();
                            $.getJSON("/LogIn/CheckUserName?UserName=" + userName, function (data) {
                                $('#checking').hide();
