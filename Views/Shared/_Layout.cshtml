<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    @*<script src="~/Scripts/jquery.min.js"></script>*@
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href='http://fonts.googleapis.com/css?family=Ruluko' rel='stylesheet' type='text/css'>
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="logo">
                <a href="#"><img src="~/images/logo.png"> </a>
            </div>
            <div align="right">
              <form method="post" action="/Patient/search">
                  <select name="mydropdown" id="mydropdown">
                      <option value="Doctors">search Doctors</option>
                      <option value="Admin">Admin</option>
                      <option value="User">search User</option>
                  </select>
                  <input type="submit" id="search" value="Search" class="btn btn-warning" />
                </form>
            </div>
            <div class="clear"></div>
        </div>
     
        @RenderBody()
        <div class="ftr-bg">
            <div class="footer1">
                <div class="copy">
                    <p >Design by&nbsp;Maria</p>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
